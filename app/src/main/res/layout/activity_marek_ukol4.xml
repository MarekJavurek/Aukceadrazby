<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#C1E3C6"
    android:padding="20dp"
    android:orientation="vertical">
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:text="@string/MarekUkol4Activity_nazevhotelu"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"/>

            <TextView
                android:text="Jméno a příjmení"
                android:inputType="text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />

            <TextView
                android:text="Adresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />

            <TextView
                android:text="Telefon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />

            <TextView
                android:text="E-mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />

            <TextView
                android:text="Začátek pobytu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />

            <TextView
                android:text="Počet dnů"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pocetdni"/>

            <TextView
                android:text="Pokoj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text="jedno lůžkový"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:text="dvou lůžkový"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:text="třílůžkový"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                </RadioGroup>

        <CheckBox
            android:text="Snídaně"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:text="Kuřák"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <ToggleButton
            android:textOff="Ne"
            android:textOn="Ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <Button
                android:text="Zrušit"
                android:background="#e31e1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Odeslat formulář"
                android:background="#10ce59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
     </ScrollView>

</LinearLayout>